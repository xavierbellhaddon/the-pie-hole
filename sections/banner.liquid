{%- assign textbox_positions = section.settings.text_box_alignment | split: '_' -%}

{% if section.settings.banner_height == 'adapt' %} 
  {%- style -%}
    #Banner-{{ section.id }} .banner-container::before {
      padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;
      display: block;
    }
  {%- endstyle -%}
{% endif %}

<section class="banner banner-alignment-{{ textbox_positions[0] }} banner-width-{{ section.settings.banner_width }}" id="Banner-{{ section.id }}">
  <div class="banner-wrapper">
    <div class="banner-container banner-container-{{ textbox_positions[0] }} banner-container-{{ section.settings.banner_height }}">
      {%- if section.settings.image != blank -%}
        <img srcset="{%- if section.settings.image.width >= 350 -%}{{ section.settings.image | img_url: '350x' }} 350w,{%- endif -%}
          {%- if section.settings.image.width >= 700 -%}{{ section.settings.image | img_url: '700x' }} 700w,{%- endif -%}
          {%- if section.settings.image.width >= 500 -%}{{ section.settings.image | img_url: '500x' }} 500w,{%- endif -%}
          {%- if section.settings.image.width >= 1000 -%}{{ section.settings.image | img_url: '1000x' }} 1000w,{%- endif -%}
          {%- if section.settings.image.width >= 1200 -%}{{ section.settings.image | img_url: '1200x' }} 1200w,{%- endif -%}
          {%- if section.settings.image.width >= 2400 -%}{{ section.settings.image | img_url: '2400x' }} 2400w{%- endif -%}"
          sizes="{% if section.settings.banner_width == 'full' %}100vw{% else %}(min-width: 1200px) 1080px, (min-width: 750px) calc(100vw - 60px), calc(100vw - 32px){% endif %}"
          src="{{ section.settings.image | img_url: '1080x' }}"
          loading="lazy"
          style="object-position: {{ section.settings.image_alignment }};"
          class="banner__image banner__image--{{ section.settings.banner_height }} banner__image--{{ section.settings.banner_width }}{% if section.settings.banner_width == 'fixed' %} banner__image--fixed-{{ textbox_positions[1] }}{% endif %}"
          alt="{{ section.settings.image.alt | escape }}">
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg banner__image banner__image--fixed' }}
      {%- endif -%}
      <div class="banner-text-box-wrapper banner-text-box-wrapper-{{ textbox_positions[0] }} banner-text-box-wrapper-{{ textbox_positions[1]}} banner-text-box-wrapper-{{ section.settings.banner_height }}">
        <div class="banner-text-box-{{ textbox_positions[0] }}">
          <div class="banner-text-box__content" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }}">
            {%- if section.settings.heading != blank -%}
              <h2 class="banner__title{% if section.settings.heading_size == 'large' %} h0{% else %} h1{% endif %}">{{ section.settings.heading | escape }}</h2>
            {%- endif -%}
            {%- if section.settings.description != blank -%}
              <p>{{ section.settings.description }}</p>
            {%- endif -%}
            {%- if section.settings.button_label != blank and section.settings.button_url != blank -%}
              <a href="{{ section.settings.button_url }}" class="banner__button button">{{ section.settings.button_label | escape }}</a>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

